<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivNotification"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/linh_user"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:background="@color/list_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:paddingTop="6dp"
                android:layout_marginLeft="12dp">
                <TextView
                    android:id="@+id/tvNameNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="android"
                    android:singleLine="true"
                    />
                <TextView
                    android:id="@+id/tvArtistNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="android"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/background_dark"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingTop="6dp"
                android:paddingLeft="16dp"
                android:paddingRight="8dp"
                android:paddingBottom="6dp"
                android:orientation="horizontal"
                android:weightSum="4">
                <ImageButton
                    android:id="@+id/ibPrevNotification"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/pb_prev"/>
                <ImageButton
                    android:id="@+id/ibPlayNotification"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/pb_play"/>
                <ImageButton
                    android:id="@+id/ibNextNotification"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/pb_next"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>